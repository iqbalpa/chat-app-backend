generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @default(autoincrement()) @id
  name          String
  email         String    @unique
  password      String
}

model Friend {
  userId        Int
  friendId      Int

  @@unique([userId, friendId])
}

model Message {
  id            Int      @default(autoincrement()) @id
  name          String
  text          String
}